<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login" android:id="@+id/et_">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                android:layout_gravity="center_horizontal"/>
        <EditText
                android:layout_marginTop="30dp"
                android:id="@+id/et_email"
                style="@style/viewCustom"
                android:ems="10"
                android:hint="@string/Login_email"
                android:inputType="textEmailAddress" />
        <EditText
                android:layout_marginTop="30dp"
                android:id="@+id/et_password"
                style="@style/viewCustom"
                android:layout_below="@id/et_email"
                android:ems="10"
                android:hint="@string/Login_password"
                android:inputType="textPassword" />
        <Button
                android:layout_marginTop="30dp"
                android:id="@+id/btn_login"
                style="@style/viewCustom"
                android:layout_below="@id/et_password"
                android:background="@color/colorAccent"
                android:text="@string/login_title"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/tv_forgot_password"
                style="@style/viewCustom"
                android:layout_below="@id/btn_login"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:text="Forgot Password?"
                android:textSize="20sp" />
        <Button
                android:layout_marginTop="30dp"
                android:id="@+id/btn_register_account"
                style="@style/viewCustom"
                android:shadowRadius="@integer/google_play_services_version"
                android:layout_alignParentBottom="true"
                android:background="@color/colorAccent"
                android:text="@string/create_act"
                android:textColor="@android:color/white"
                android:textStyle="bold" android:layout_marginBottom="159dp"/>


    </LinearLayout>


</RelativeLayout>